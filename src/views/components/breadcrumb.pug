-
	var defaultBC = {
		title: 'Post Title',
		items: [
			{
				link: '/views/home',
				text: ' Home'
			},
			{
				link: '#',
				text: 'Post'
			}
		]
	};
	var breadcrumb = (breadcrumb) ? Object.assign({}, defaultBC, breadcrumb) : defaultBC;
.breadcumb-area(style='background-image: url(/img/bg-img/breadcumb.jpg);')
	.container.h-100
		.row.h-100.align-items-center
			.col-12
				.bradcumb-title.text-center
					h2= breadcrumb.title
.breadcumb-nav
	.container
		.row
			.col-12
				nav(aria-label='breadcrumb')
					ol.breadcrumb
						each item, index in breadcrumb.items
							if index === 0
								li.breadcrumb-item
									a(href=item.link)
										i.fa.fa-home(aria-hidden='true')
										= item.text
							else if index === (breadcrumb.items.length - 1)
								li.breadcrumb-item.active(aria-current='page')= item.text
							else
								li.breadcrumb-item
									a(href=item.link)= item.text