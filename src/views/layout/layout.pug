doctype html
html
	head
		meta(charset='UTF-8')
		meta(name='description' content='')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		//-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags

		//-- Title
		title= data.layoutComponent.blogTitle
		//-- Favicon
		link(rel='icon' href='/img/core-img/favicon.ico')
		//-- Core Stylesheet
		link(href='/css/style.css' rel='stylesheet')
		//-- Responsive CSS
		link(href='/css/responsive/responsive.css' rel='stylesheet')

		//-- QuillJS
		link(href='https://cdn.quilljs.com/1.1.6/quill.snow.css' rel='stylesheet')
		script(src='/js/quill/webcomponentsjs/webcomponents-lite.js')
		script(type='text/javascript' src='/js/quill/highlightjs/highlight.pack.min.js')
		link(rel='stylesheet' href='/js/quill/KaTeX/dist/katex.min.css')
		script(type='text/javascript' src='/js/quill/KaTeX/dist/katex.min.js')
		link(rel='import' href='/js/quill/polymer/polymer.html')
		link(rel='import' href='/js/quill/quill-element.html')
		script(src='https://cdn.quilljs.com/1.1.6/quill.js')

	body
		//-- Preloader Start
		#preloader
			.yummy-load
		include ../commons/header/header

		block content

		include ../commons/footer/footer

		//-- Jquery-2.2.4 js
		script(src='/js/jquery/jquery-2.2.4.min.js')
		//-- Popper js
		script(src='/js/bootstrap/popper.min.js')
		//-- Bootstrap-4 js
		script(src='/js/bootstrap/bootstrap.min.js')
		//-- All Plugins JS
		script(src='/js/others/plugins.js')
		//-- Active JS
		script(src='/js/active.js')
		//-- Main app JS
		script(src='/js/main.js')